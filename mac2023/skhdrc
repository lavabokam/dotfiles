# applications

alt + shift - g : open -a "Google Chrome" 
ctrl - return : open -a "Alacritty" -n

ctrl + cmd - r : yabai --stop-service; skhd --stop-service; yabai --start-service ; skhd --start-service  
ctrl + cmd - v : osascript /Volumes/work/dotfiles/mac2023/hydvpn-connect.scpt

